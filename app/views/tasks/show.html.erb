<!-- app/views/tasks/show.html.erb -->

<h1>Détails de Task</h1>
<div class="container">
<div><strong>Titre :</strong> <%= @task.title %><br></div>
<div><strong>Détails :</strong> <%= @task.details %><br></div>
<div><strong>Statut :</strong> <%= @task.completed ? "Terminée" : "Non terminée" %><br></div>
</div>

<div class="link">
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
 <div class="task-link">
      <%= link_to "Update", update_path %>
      </div>


<div class="link"><%= link_to "Retour", tasks_path %></div>
